<!doctype html>
<html>
  <head>
    <%= partial "layouts/head" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial "layouts/google_tag_manager" %>

    <%= partial "layouts/header" %>

    <div class="container">
        
      <%= partial "layouts/breadcrumb_trail" %> 
      <%= partial "layouts/edit_on_github" %>

      <%= partial "layouts/side_nav" %>

      <div class="row">    
        <div class="col-md-9 col-md-offset-3 col-sm-9 col-sm-offset-3"> 

          <div class="markdown">
            <%= yield %>

            <% current_page.data.includes && current_page.data.includes.each do |include| %>
              <%= partial "/includes/#{include}" %>
            <% end %>
          </div>
          
        </div>
      </div>

      <div class="row card-set">
        <div class="col-md-9 col-md-offset-3 col-sm-9 col-sm-offset-3">
          <%= partial("layouts/flex_cards", 
                :locals => { :cards => current_page.data.cards }) %>
        </div>
      </div> 

    </div>

    <%= partial "layouts/footer" %>

    <%= javascript_include_tag "page/tocbot_init_script" %>
    
  </body>
</html>
