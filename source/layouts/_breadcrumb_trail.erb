<% breadcrumbs = get_breadcrumbs current_page.path %>

<div class="breadcrumb-trail">
<% breadcrumbs.each_with_index do |(link, name), index| %> 
    <% if index != breadcrumbs.length - 1 %>
        <span><a href="<%= link %>">
            <%= File.basename(name, '.html').gsub(/_/, ' ').titleize %>
        </a></span>
        <span class="chevron"> / </span>
    <% else %>
        <span class="this-page"><%= File.basename(name, '.html').gsub(/_/, ' ').titleize %></span>
    <% end %>
<% end %>
</div>

